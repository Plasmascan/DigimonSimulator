<Window x:Class="DigimonSimulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DigimonSimulator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Canvas x:Name="screenCavas" Margin="112,69,253,108" Background="#FFF0EEEE" MouseLeftButtonDown="mouseLeftButtonClick">
            <Image x:Name="menuImage1" Height="21" Canvas.Left="19" Canvas.Top="11" Width="25">
                <Image.OpacityMask>
                    <ImageBrush ImageSource="/menu1Icon.gif"/>
                </Image.OpacityMask>
            </Image>
        </Canvas>
        <Button x:Name="aButton" Content="A" HorizontalAlignment="Left" Margin="116,362,0,0" VerticalAlignment="Top" Click="aButton_Click" Width="32"/>
        <Button x:Name="bButton" Content="B" HorizontalAlignment="Left" Margin="166,362,0,0" VerticalAlignment="Top" Click="bButton_Click" Width="30"/>
        <Button x:Name="cButton" Content="C" HorizontalAlignment="Left" Margin="216,362,0,0" VerticalAlignment="Top" Width="31" Click="cButton_Click"/>

    </Grid>
</Window>
